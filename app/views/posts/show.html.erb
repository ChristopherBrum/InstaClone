<div class="card">
    <%= link_to(@post.user.email, @post.user, class: "card-text") %><br>
    <%= image_tag @post.image, class: "my-pic" %><br>
    <div class="card-body">
    <%= @post.caption %>
    
    <% if current_user == @post.user %>
        <%= button_to "Delete", @post, method: :delete %>
        <%= button_to "Edit Post", "/posts/#{@post.id}/edit", method: :get %>
    <% end %>
    </div>
</div>
