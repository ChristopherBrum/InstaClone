

<% @posts.each do |post| %>
    <div class="card">
        <%= link_to(post.user.email, post.user, class: "card-text") %></p>
        <%= link_to(image_tag(post.image, class: "my-pic"), post) %>
        <div class="card-body">
            <p><%= post.caption %></div>
        </div>
    </div>
<% end %>